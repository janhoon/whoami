---
import { getCollection, type CollectionEntry } from 'astro:content'
import BlogFooter from '../../components/BlogFooter.astro'
import BlogTitle from '../../components/BlogTitle.astro'
import BlogLayout from '../../layouts/BlogLayout.astro'

export const prerender = true

export async function getStaticPaths() {
  const posts = await getCollection('blog')

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const { Content } = await post.render()

const schema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: post.data.title,
  description: post.data.description ?? 'Article by Jan Hoon',
  datePublished: post.data.date,
  author: {
    '@type': 'Person',
    name: post.data.author?.name ?? 'Jan Hoon',
    url: post.data.author?.url ?? 'https://janhoon.com',
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': `https://janhoon.com/blog/${post.slug}`,
  },
}
---

<BlogLayout
  title={`${post.data.title} - Jan Hoon`}
  description={post.data.description ?? 'Blog post from Jan Hoon'}
  schema={schema}
>
  <article class="w-full">
    <BlogTitle
      title={post.data.title}
      date={post.data.date}
      authorName={post.data.author?.name ?? 'Jan Hoon'}
      authorUrl={post.data.author?.url ?? 'https://janhoon.com'}
    />

    <div class="prose max-w-none mt-8">
      <Content />
    </div>

    <BlogFooter
      author="Jan Hoon"
      about="Data & Platform Engineer"
      coffeeSlug="janhoon"
      imageUrl="https://github.com/janhoon.png"
      githubUrl="https://github.com/janhoon"
      linkedinUrl="https://www.linkedin.com/in/janhoon"
      xUrl="https://x.com/janhoon"
    />
  </article>
</BlogLayout>
