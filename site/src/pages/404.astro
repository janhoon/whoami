---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="Not Found - Jan Hoon" description="Page not found" noindex={true}>
  <main id="main-content" class="page-shell min-h-screen flex items-center justify-center py-8">
    <div class="section-card w-full max-w-xl p-8 text-center">
      <p class="kicker mb-4">404</p>
      <h1 class="display-heading text-4xl text-slate-900">Page not found</h1>
      <p class="text-slate-700 mt-3">The page you requested does not exist or has moved.</p>
      <a
        href="/"
        class="chip inline-flex mt-6 focus-ring"
      >
        Return home
      </a>
    </div>
  </main>
</BaseLayout>
