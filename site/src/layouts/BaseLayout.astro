---
import '../../assets/css/main.css'

interface Props {
  title?: string
  description?: string
  ogType?: 'website' | 'article'
  ogImage?: string
  schema?: Record<string, unknown> | Array<Record<string, unknown>>
  noindex?: boolean
}

const {
  title = 'Jan Hoon',
  description = 'Data and Platform Engineer',
  ogType = 'website',
  ogImage = '/images/pfp.jpg',
  schema,
  noindex = false,
} = Astro.props

const baseUrl = 'https://janhoon.com'
const canonical = Astro.url?.href ?? baseUrl
const absoluteOgImage = ogImage.startsWith('http') ? ogImage : new URL(ogImage, baseUrl).href
const schemaMarkup = schema ? JSON.stringify(schema) : ''

const posthogKey = import.meta.env.PUBLIC_POSTHOG_KEY
const posthogHost = import.meta.env.PUBLIC_POSTHOG_HOST ?? 'https://eu.i.posthog.com'

const analyticsScript = posthogKey
  ? `
