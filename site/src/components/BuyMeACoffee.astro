---
interface Props {
  slug: string
}

const { slug } = Astro.props
---

<a href={`https://www.buymeacoffee.com/${slug}`} target="_blank" rel="noopener noreferrer">
  <img
    src={`https://img.buymeacoffee.com/button-api/?text=Buy%20me%20a%20coffee&emoji=%E2%98%95&slug=${slug}&button_colour=16a349&font_colour=ffffff&font_family=Cookie&outline_colour=ffffff&coffee_colour=FFDD00`}
    alt="Buy me a coffee"
    width="240"
    height="80"
    loading="lazy"
  />
</a>
