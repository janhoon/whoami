---
interface Props {
  title: string
  date: string
  authorName: string
  authorUrl: string
}

const { title, date, authorName, authorUrl } = Astro.props
---

<div class="flex flex-col items-start justify-between w-full">
  <h1 class="text-4xl font-bold mb-4">{title}</h1>
  <a
    href={authorUrl}
    class="text-lg text-gray-400"
    target={authorUrl.startsWith('http') ? '_blank' : undefined}
    rel={authorUrl.startsWith('http') ? 'noopener noreferrer' : undefined}
  >
    by
    <span class="font-bold text-xl text-green-600 hover:text-green-500 hover:underline">
      {authorName}
    </span>
  </a>
  <span class="text-lg text-gray-400">{date}</span>
</div>
